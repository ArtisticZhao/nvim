{
    "coc.preferences.extensionUpdateCheck": "daily",
    // suggestion settings
    "suggest.autoTrigger": "always",
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    // suggest icon
    "coc.source.syntax.shortcut": "",
    "coc.source.tag.shortcut": "笠",
    "snippets.shortcut": "",
    // coc-highlight
    "colors.filetypes": ["*"],
    // coc-snippets
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "$HOME/.config/nvim/myUltiSnips/"
    ],
    // coc-yank
    "yank.list.maxsize": 20,
    "yank.enableCompletion": false,
    "yank.highlight.duration": 1500
}
