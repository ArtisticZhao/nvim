{
    "http.proxy": "http://127.0.0.1:7890",
    "coc.preferences.extensionUpdateCheck": "weekly",
    // suggestion settings
    "suggest.autoTrigger": "always",
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    // suggest icon
    "coc.source.syntax.shortcut": "",
    "coc.source.tag.shortcut": "笠",
    "snippets.shortcut": "",
    // coc-highlight
    "colors.filetypes": ["*"],
    // coc-snippets
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "$HOME/.config/nvim/myUltiSnips/"
    ],
    // coc-yank
    "yank.list.maxsize": 20,
    "yank.enableCompletion": false,
    "yank.highlight.duration": 1500,

    // language server configurations
    "languageserver": {
        "vls":{
            "command": "vls",
            "args": ["--force-diagnostics"],
            "filetypes": ["verilog"]
        }
    },
    "snippets.ultisnips.pythonPrompt": false
}
